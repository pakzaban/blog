<!DOCTYPE html>
<html lang="en">
<head>
    <title>Read</title>

    <%- include("partials/header.ejs")%>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/" class="nav-link px-2 text-white">Read</a></li>
                <li><a href="/write" class="nav-link px-2 my_nav_link">Write</a></li>
                <li><a href="/edit" class="nav-link px-2 my_nav_link">Edit</a></li>
                <li><a href="#" class="nav-link px-2 my_nav_link" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Delete</a></li>
            </ul>

            <h1>the blog</h1>
        </div>
    </div>
</header>
<main>
    <div id="container" class="container text-left">
        <div class="row">
            <div id="left_column" class="col">
                <ul>
                    <% for (const key in dic) { %>
                    <li>
                        <form action="/read" method="POST">
                            <input type="hidden" name="title" value="<%=key%>">
                            <input type="submit" value="<%=key%>" class="text_button">
                        </form>
                    </li>
                    <%}%>
                </ul>
            
            </div>
            <div id="right_column" class="col">
                <% if (content) { %>
                    <p id="content">
                        <pre class="blog_font"><%= content %></pre>
                    </p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="confirmDeleteModal" class="modal fade" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the selected entry?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="window.location.href = '/'">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton" onclick="window.location.href = '/delete'">Delete</button>
                </div>
            </div>
        </div>
    </div>

</main>

<%- include("partials/footer.ejs")%>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="/js/script.js"></script>
</body>
</html>
